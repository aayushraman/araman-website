	keywords = {Animals, Base Pairing, Bias, Databases, Genetic, Disease Models, Animal, Gene Expression Profiling, Gene Expression Regulation, Humans, Methyl-CpG-Binding Protein 2, Mice, Principal Component Analysis, RNA, Nuclear, Rett Syndrome, Sequence Analysis, RNA, Syndrome, Topotecan},
	pages = {3225},
